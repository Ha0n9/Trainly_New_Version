<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fillViewport="true">

  <LinearLayout
      android:id="@+id/main"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/background_dark"
      android:orientation="vertical"
      android:padding="16dp">

    <!-- TOP BAR: GREETING + NOTIFICATION ICON -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp">

      <!-- Greeting -->
      <TextView
          android:id="@+id/tvGreeting"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Hi, "
          android:textColor="@color/text_primary"
          android:textSize="24sp"
          android:textStyle="bold"
          android:layout_alignParentStart="true"
          android:layout_centerVertical="true" />

      <!-- NOTIFICATION ICON WITH BADGE -->
      <FrameLayout
          android:id="@+id/frameNotification"
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:layout_alignParentEnd="true"
          android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/icNotification"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/bell"
            android:layout_gravity="center"
            app:tint="@color/text_primary"
            android:padding="4dp" />

        <!-- NOTIFICATION BADGE -->
        <TextView
            android:id="@+id/tvNotificationBadge"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/badge_background"
            android:layout_gravity="top|end"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:visibility="gone" />
      </FrameLayout>
    </RelativeLayout>

    <!-- USER INFO CARD -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/card_dark">

      <LinearLayout
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:padding="18dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <!-- Avatar -->
        <ImageView
            android:id="@+id/ivUserAvatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/user"
            android:padding="8dp"
            app:tint="@color/primary_orange" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

          <TextView
              android:id="@+id/tvUserFullname"
              android:text=""
              android:textSize="20sp"
              android:textStyle="bold"
              android:textColor="@color/text_primary"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />

          <TextView
              android:id="@+id/tvUserRole"
              android:text=""
              android:textSize="14sp"
              android:textColor="@color/primary_orange"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />

        </LinearLayout>
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CARD: Quick Stats -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="18dp">

      <!-- Workouts Done -->
      <androidx.cardview.widget.CardView
          android:layout_width="0dp"
          android:layout_height="100dp"
          android:layout_marginEnd="8dp"
          android:layout_weight="1"
          app:cardCornerRadius="16dp"
          app:cardBackgroundColor="@color/card_dark">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <TextView
              android:id="@+id/tvStatWorkouts"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="12"
              android:textColor="@color/primary_orange"
              android:textSize="20sp"
              android:textStyle="bold" />

          <TextView
              android:text="Workouts"
              android:textSize="12sp"
              android:textColor="@color/text_secondary"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
        </LinearLayout>

      </androidx.cardview.widget.CardView>

      <!-- Calories -->
      <androidx.cardview.widget.CardView
          android:layout_width="0dp"
          android:layout_height="100dp"
          android:layout_marginStart="4dp"
          android:layout_marginEnd="4dp"
          android:layout_weight="1"
          app:cardCornerRadius="16dp"
          app:cardBackgroundColor="@color/card_dark">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <TextView
              android:id="@+id/tvStatCalories"
              android:text="450"
              android:textSize="20sp"
              android:textStyle="bold"
              android:textColor="@color/primary_orange"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

          <TextView
              android:text="Calories"
              android:textSize="12sp"
              android:textColor="@color/text_secondary"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
        </LinearLayout>

      </androidx.cardview.widget.CardView>

      <!-- Weight -->
      <androidx.cardview.widget.CardView
          android:layout_width="0dp"
          android:layout_height="100dp"
          android:layout_marginStart="8dp"
          android:layout_weight="1"
          app:cardCornerRadius="16dp"
          app:cardBackgroundColor="@color/card_dark">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <TextView
              android:id="@+id/tvStatWeight"
              android:text="72 kg"
              android:textSize="20sp"
              android:textStyle="bold"
              android:textColor="@color/primary_orange"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

          <TextView
              android:text="Weight"
              android:textSize="12sp"
              android:textColor="@color/text_secondary"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
        </LinearLayout>

      </androidx.cardview.widget.CardView>

    </LinearLayout>


    <!-- CARD: Today Workout -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardWorkouts"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="14dp"
        android:elevation="6dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/card_dark">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:padding="20dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/dumbell"
            android:layout_marginStart="16dp"
            app:tint="@color/primary_orange" />

        <TextView
            android:id="@+id/tvCardWorkouts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="12dp"
            android:text="@string/home_card_workouts"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="›"
            android:textColor="@color/primary_orange"
            android:textSize="28sp" />
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CARD: Progress -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardProgress"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="14dp"
        android:elevation="6dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/card_dark">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:padding="20dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/line_chart"
            android:layout_marginStart="16dp"
            app:tint="@color/primary_orange" />

        <TextView
            android:id="@+id/tvCardProgress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="12dp"
            android:text="@string/home_card_progress"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="›"
            android:textColor="@color/primary_orange"
            android:textSize="28sp" />
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CARD: Meals -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardMeals"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:elevation="6dp"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="14dp"
        app:cardBackgroundColor="@color/card_dark">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:padding="20dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/meal"
            android:layout_marginStart="16dp"
            app:tint="@color/primary_orange" />

        <TextView
            android:id="@+id/tvCardMeals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="12dp"
            android:text="@string/home_card_meals"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="›"
            android:textColor="@color/primary_orange"
            android:textSize="28sp" />
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- EDIT PROFILE -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardEditProfile"
        android:layout_width="match_parent"
        android:layout_marginBottom="14dp"
        android:layout_height="80dp"
        android:elevation="6dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/card_dark">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:padding="20dp">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/edit"
            app:tint="@color/primary_orange" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="12dp"
            android:text="@string/card_edit_profile"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="›"
            android:textColor="@color/primary_orange"
            android:textSize="28sp" />
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CHOOSE TRAINER -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardChooseTrainer"
        android:layout_width="match_parent"
        android:layout_marginBottom="14dp"
        android:layout_height="80dp"
        android:elevation="6dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/card_dark">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:padding="20dp">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/user_list"
            app:tint="@color/primary_orange" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="12dp"
            android:text="@string/card_choose_trainer"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="›"
            android:textColor="@color/primary_orange"
            android:textSize="28sp" />
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- BMI CALCULATOR -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBMICalculator"
        android:layout_width="match_parent"
        android:layout_marginBottom="14dp"
        android:layout_height="80dp"
        android:elevation="6dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/card_dark">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:padding="20dp">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/calculator"
            app:tint="@color/primary_orange" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="12dp"
            android:text="@string/card_bmi_calculator"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="›"
            android:textColor="@color/primary_orange"
            android:textSize="28sp" />
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- WORKOUT CALENDAR -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardWorkoutCalendar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:elevation="6dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/card_dark">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:padding="20dp">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/calendar"
            app:tint="@color/primary_orange" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="12dp"
            android:text="@string/card_workout_calendar"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="›"
            android:textColor="@color/primary_orange"
            android:textSize="28sp" />
      </LinearLayout>
    </androidx.cardview.widget.CardView>

  </LinearLayout>
</androidx.core.widget.NestedScrollView>