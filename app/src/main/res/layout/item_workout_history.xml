<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    android:elevation="4dp"
    app:cardCornerRadius="18dp"
    app:cardBackgroundColor="@color/card_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Status Icon -->
        <ImageView
            android:id="@+id/ivStatusIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="14dp"
            android:src="@drawable/ic_history_done"
            app:tint="@color/primary_orange" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Workout Title -->
            <TextView
                android:id="@+id/tvHistoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Push Day Workout" />

            <!-- Date -->
            <TextView
                android:id="@+id/tvHistoryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Jan 14, 2025"
                android:textColor="@color/text_secondary"
                android:textSize="13sp" />

        </LinearLayout>

        <!-- Summary / Detail -->
        <TextView
            android:id="@+id/tvHistorySummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="450 kcal"
            android:textColor="@color/primary_orange"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
