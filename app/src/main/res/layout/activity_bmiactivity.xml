<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:orientation="vertical">

    <include layout="@layout/include_trainee_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/bmi_title"
            android:textColor="@color/primary_orange"
            android:textSize="26sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etBMIWeight"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/card_dark"
            android:hint="@string/bmi_weight_hint"
            android:inputType="numberDecimal"
            android:padding="14dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary" />

        <EditText
            android:id="@+id/etBMIHeight"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="14dp"
            android:background="@color/card_dark"
            android:hint="@string/bmi_height_hint"
            android:inputType="numberDecimal"
            android:padding="14dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary" />

        <Button
            android:id="@+id/btnBMICalc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/primary_orange"
            android:text="@string/bmi_calculate_btn"
            android:textColor="@color/background_dark" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardBMIResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/card_dark"
            app:cardCornerRadius="18dp"
            android:elevation="6dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bmi_result"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvBMIValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22.4"
                    android:textColor="@color/primary_orange"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/tvBMICategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Normal"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
