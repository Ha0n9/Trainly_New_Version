<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="24dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/bmi_title"
        android:textColor="@color/primary_orange"
        android:textSize="26sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etBMIWeight"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/card_dark"
        android:hint="@string/bmi_weight_hint"
        android:inputType="numberDecimal"
        android:padding="14dp"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_secondary" />

    <EditText
        android:id="@+id/etBMIHeight"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="14dp"
        android:background="@color/card_dark"
        android:hint="@string/bmi_weight_hint"
        android:inputType="numberDecimal"
        android:padding="14dp"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_secondary" />

    <Button
        android:id="@+id/btnBMICalc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/primary_orange"
        android:text="@string/bmi_calculate_btn"
        android:textColor="@color/background_dark" />

    <TextView
        android:id="@+id/tvBMIResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="@color/text_primary"
        android:textSize="22sp" />
</LinearLayout>
