<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/include_trainee_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Workouts"
                android:textColor="@color/text_primary"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ready to crush your goals?"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:layout_marginBottom="24dp" />

            <!-- No Workouts Message -->
            <TextView
                android:id="@+id/tvNoWorkouts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No workouts assigned yet.\nCheck back later or contact your trainer!"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:textAlignment="center"
                android:padding="40dp"
                android:visibility="gone" />

            <!-- Workout Card 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardWorkout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/card_dark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/dumbell"
                        app:tint="@color/primary_orange" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/tvWorkout1Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Push Day"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvWorkout1Exercises"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 exercises"
                            android:textColor="@color/primary_orange"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvWorkout1Desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chest, shoulders, and triceps workout"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_secondary"
                    android:alpha="0.2"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TAP TO START →"
                    android:textColor="@color/primary_orange"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_gravity="end" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        <!-- Workout Card 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardWorkout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/card_dark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/dumbell"
                        app:tint="@color/primary_orange" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/tvWorkout2Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pull Day"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvWorkout2Exercises"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4 exercises"
                            android:textColor="@color/primary_orange"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvWorkout2Desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Back and biceps workout"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_secondary"
                    android:alpha="0.2"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TAP TO START →"
                    android:textColor="@color/primary_orange"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_gravity="end" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Workout Card 3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardWorkout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/card_dark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/dumbell"
                        app:tint="@color/primary_orange" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/tvWorkout3Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Leg Day"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvWorkout3Exercises"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6 exercises"
                            android:textColor="@color/primary_orange"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvWorkout3Desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lower body workout"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_secondary"
                    android:alpha="0.2"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TAP TO START →"
                    android:textColor="@color/primary_orange"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_gravity="end" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>
</ScrollView>
