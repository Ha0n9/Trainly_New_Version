<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- TOP BAR: GREETING + NOTIFICATION + LOGOUT -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <!-- GREETING -->
            <TextView
                android:id="@+id/tvTrainerGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome, Coach"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <!-- NOTIFICATION ICON -->
            <FrameLayout
                android:id="@+id/frameNotification"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_toStartOf="@id/btnLogout"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/icNotification"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/bell"
                    android:layout_gravity="center"
                    app:tint="@color/text_primary"
                    android:padding="4dp" />

                <!-- NOTIFICATION BADGE -->
                <TextView
                    android:id="@+id/tvNotificationBadge"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/ic_history_failed"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- LOGOUT BUTTON -->
            <ImageView
                android:id="@+id/btnLogout"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/user"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:tint="@color/primary_orange"
                android:padding="4dp" />
        </RelativeLayout>

        <!-- QUICK STATS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="18dp">

            <!-- CLIENT COUNT -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/card_dark">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvStatClients"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/primary_orange"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clients"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- PLANS COUNT -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/card_dark">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvStatPlans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/primary_orange"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plans"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ASSIGNED COUNT -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/card_dark">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvStatAssigned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/primary_orange"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:text="Assigned"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- ===== ACTION CARDS BELOW ===== -->

        <!-- PENDING REQUESTS (NEW) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPendingRequests"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="14dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="@color/card_dark">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/user_list"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:tint="@color/primary_orange" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending Requests"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPendingCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 requests"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- MY TRAINEES (NEW) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMyTrainees"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="14dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="@color/card_dark">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/user"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:tint="@color/primary_orange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="14dp"
                    android:text="My Trainees"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- INVITE TRAINEE (NEW) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardInviteTrainee"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="14dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="@color/card_dark">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/user_list"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:tint="@color/primary_orange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="14dp"
                    android:text="Invite Trainee"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CREATE PLAN -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCreatePlan"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="14dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="@color/card_dark">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/calendar_plus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:tint="@color/primary_orange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="14dp"
                    android:text="Create Workout Plan"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ASSIGN WORKOUT -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAssignWorkout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="14dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="@color/card_dark">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/flame"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:tint="@color/primary_orange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="14dp"
                    android:text="Assign Workout"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- VIEW PROGRESS -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewProgress"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="14dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="@color/card_dark">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/line_chart"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:tint="@color/primary_orange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="14dp"
                    android:text="View Progress"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SEND REMINDER -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSendReminder"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="@color/card_dark">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/bell"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:tint="@color/primary_orange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="14dp"
                    android:text="Send Reminder"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>