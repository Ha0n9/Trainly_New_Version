<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- GREETING -->
        <TextView
            android:id="@+id/tvTrainerGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, Coach"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- QUICK STATS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="18dp">

            <!-- CLIENT COUNT -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/card_dark">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvStatClients"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/primary_orange"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clients"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- PLANS COUNT -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/card_dark">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvStatPlans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/primary_orange"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plans"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ASSIGNED COUNT -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/card_dark">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvStatAssigned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/primary_orange"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:text="Assigned"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- ===== ACTION CARDS BELOW ===== -->

        <!-- CREATE PLAN -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCreatePlan"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="14dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="@color/card_dark">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/icCreatePlan"
                    android:src="@drawable/calendar_plus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:tint="@color/primary_orange" />

                <TextView
                    android:id="@+id/tvCardCreatePlan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="14dp"
                    android:text="@string/trainer_create_plan"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ASSIGN WORKOUT -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAssignWorkout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="14dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="@color/card_dark">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/icAssignWorkout"
                    android:src="@drawable/flame"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:tint="@color/primary_orange" />

                <TextView
                    android:id="@+id/tvCardAssignWorkout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="14dp"
                    android:text="@string/trainer_assign_workout"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- VIEW PROGRESS -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewProgress"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="14dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="@color/card_dark">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/icViewProgress"
                    android:src="@drawable/sprout"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:tint="@color/primary_orange" />

                <TextView
                    android:id="@+id/tvCardViewProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="14dp"
                    android:text="@string/trainer_view_progress"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SEND REMINDER -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSendReminder"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="@color/card_dark">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/icReminder"
                    android:src="@drawable/bell"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:tint="@color/primary_orange" />

                <TextView
                    android:id="@+id/tvCardSendReminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="14dp"
                    android:text="@string/trainer_send_reminder"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
